#:import W kivy.core.window.Window
#:import Margin components.Margin
#:import Board components.Board
#:import NumKey components.NumKey



<Game>:
    board1:board1
    board2:board2
    n_piece_1: n_piece_1
    n_piece_2: n_piece_2
    StackLayout:
        orientation: 'tb-lr' if W.height < W.width else 'lr-tb'
        Margin:
            Label:
                text: root.date
            Widget:
            Label:
                text:'Next'
            BoxLayout:
                NPiece:
                    id: n_piece_1
            Widget:
            Label:
                text:'Score'
            Label:
                text:str(root.score)
        Board:
            id:board1
        Board:
            id:board2
        Margin:
            Label:
                text:root.time
            Widget:
            Label:
                text:'Next'
            BoxLayout:
                NPiece:
                    id: n_piece_2
            Widget:
            Label:
                text:'Highscore'
            Label:
                text:str(root.high_score)



<Title>:
    StackLayout:
        orientation: 'tb-lr' if W.height < W.width else 'lr-tb'
        Margin:
            BoxLayout:
                orientation:'vertical' if W.height < W.width else 'horizontal'
                Label:
                    text:'p'
                Label:
                    text:'y'
                Label:
                    text:'w'
                Label:
                    text:'e'
                Label:
                    text:'e'
                Label:
                    text:'k'
        BoxLayout:
            orientation:'vertical'
            size_hint:None,None
            size:(W.height, W.height) if W.height < W.width else (W.width, W.width)
            Label:
                size_hint:1,0.1
                markup:True
                text:'[color=FF0000]B[/color][color=FF7F00]i[/color][color=FFFF00]t[/color][color=00FF00]e[/color][color=00FFFF]t[/color][color=0000FF]r[/color][color=8B00FF]i[/color][color=FFFFFF]s[/color]'
                font_size:self.height -2
            Label:
                size_hint:1,0.1
                text:root.psw
            GridLayout:
                size_hint:1,0.8
                padding: [self.width / 8, self.width / 16, self.width / 8, self.width / 16]
                cols:3
                row:4
                NumKey:
                    text:'1\n '
                    on_press:root.password += '1'
                NumKey:
                    text: '2\nABC'
                    on_press:root.password += '2'
                NumKey:
                    text: '3\nDEF'
                    on_press:root.password += '3'
                NumKey:
                    text:'4\nGHI'
                    on_press:root.password += '4'
                NumKey:
                    text: '5\nJKL'
                    on_press:root.password += '5'
                NumKey:
                    text: '6\nMNO'
                    on_press:root.password += '6'
                NumKey:
                    text: '7\nPQRS'
                    on_press:root.password += '7'
                NumKey:
                    text: '8\nTUV'
                    on_press:root.password += '8'
                NumKey:
                    text: '9\nWXYZ'
                    on_press:root.password += '9'
                Widget:
                NumKey:
                    text: '0\n '
                    on_press: root.password += '0'
                Widget:
        Margin:
            BoxLayout:
                orientation:'vertical' if W.height < W.width else 'horizontal'
                Label:
                    text:'p'
                Label:
                    text:'y'
                Label:
                    text:'w'
                Label:
                    text:'e'
                Label:
                    text:'e'
                Label:
                    text:'k'